@model IEnumerable<AppVendasWeb.Models.Venda>

@{
    ViewData["Title"] = "Vendas";
}

<h1 class="display-5 text-light my-5">Vendas</h1>

<p>
    <a asp-action="Create" class="btn btn-lg btn-outline-light d-inline-flex align-items-center">
        <svg class="me-2" bootstrap-icon="PlusLg" width="16" height="16" arial-label="Adicionar"></svg>Adicionar
    </a>
</p>
<table class="table table-dark table-striped table-hover">
    <thead class="text-center">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DataVenda)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValorTotal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NotaFiscal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DataVenda)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ValorTotal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NotaFiscal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cliente.CPF)
                </td>
                <td class="text-end">
                    <a class="text-decoration-none text-light" asp-action="Edit" asp-route-id="@item.VendaId">
                        <svg class="me-2" bootstrap-icon="PencilFill" width="16" height="16" arial-label="Editar"></svg>
                    </a>

                    <a class="text-decoration-none text-light" asp-action="Details" asp-route-id="@item.VendaId">
                        <svg class="me-2" bootstrap-icon="InfoCircleFill" width="16" height="16" arial-label="Detalhes"></svg>
                    </a>
                    <a class="text-decoration-none text-light" asp-action="Delete" asp-route-id="@item.VendaId">
                        <svg class="me-2" bootstrap-icon="Trash" width="16" height="16" arial-label="Excluir"></svg>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
