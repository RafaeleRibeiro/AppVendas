@model IEnumerable<AppVendasWeb.Models.ItemDaVenda>

@{
    ViewData["Title"] = "Itens das Vendas";
}

<h1 class="display-5 text-light my-5">Itens das Vendas</h1>

<p>
    <a asp-action="Create" asp-route-id=@ViewData["VendaId"] class="btn btn-lg btn-outline-light d-inline-flex align-items-center">
        <svg class="me-2" bootstrap-icon="PlusLg" width="16" height="16" arial-label="Adicionar"></svg>Adicionar
    </a>
</p>
<table class="table table-bordered table-light table-striped table-hover" style="border-collapse: separate; border-spacing:0 10px">
    <thead class="text-center">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Produto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Venda)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody class="text-center">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Produto.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Venda.NotaFiscal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantidade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Valor)
                </td>
                <td class="text-end">
                    <a class="text-decoration-none text-success" asp-action="Edit" asp-route-id="@item.ItemDaVendaId">
                        <svg class="me-2" bootstrap-icon="PencilFill" width="16" height="16" arial-label="Editar"></svg>
                    </a>

                    <a class="text-decoration-none text-warni" asp-action="Details" asp-route-id="@item.ItemDaVendaId">
                        <svg class="me-2" bootstrap-icon="InfoCircleFill" width="16" height="16" arial-label="Detalhes"></svg>
                    </a>
                    <a class="text-decoration-none text-danger" asp-action="Delete" asp-route-id="@item.ItemDaVendaId">
                        <svg class="me-2" bootstrap-icon="Trash" width="16" height="16" arial-label="Excluir"></svg>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
